{{#if error}}
<div style="color:#ee0000;">
    <span>{{message}}</span>
</div>
{{/if}}
<form action="/login" method="post">
    <div>
        <label>Username:<input type="text" name="username"/></label>
    </div>
    <div>
        <label>Password:<input type="password" name="password"/></label>
    </div>
    <div>
        <input type="submit" value="Log In"/>
    </div>
</form>