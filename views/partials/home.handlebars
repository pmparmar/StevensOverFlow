<p>Hi, {{user.name}}</p>
<div id ="contenttable">
<table class="table table-inverse table-bordered table-condensed table-striped table-hover" id="note-data">

    <thead>
    <tr>
        <th>Title</th>
        <th>Body</th>
    </tr>
    </thead>
    <tbody>
    <p>{{a}}</p>

    {{#each postList}}
        <tr class='clickable-row' data-href="/post/{{_id}}">
            <td>{{title}}</td>
            <td>{{body}}</td>
        </tr>
    {{/each}}

    </tbody>
</table>
</div>
<button type="submit" class="btn btn-default" id="addnewnote">Add new note</button>